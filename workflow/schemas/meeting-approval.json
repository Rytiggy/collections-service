{
  "title": "Meeting Approval Form",
  "description": "The meeting approval form allows admins to approve the submissions that are made to meetings.",
  "case_description": "Approval request for item {{parameters.item}}.",
  "initialParameters": {
    "event-approval-choices": {
      "value": [
        {
          "label": "Approve",
          "parameter": "event-approved"
        },
        {
          "label": "Deny",
          "parameter": "event-denied"
        }
      ]
    }
  },
  "sections": [
    {
      "label": "Event Information",
      "description": "Basic information about this meeting event",
      "widgets": [
        {
          "label": "",
          "description": "",
          "widgetType": "item-display",
          "parameters": {
            "value": "item"
          }
        }
      ]
    },
    {
        "label": "Event Logisitics",
        "description": "Set the time and roomfor the event",
        "widgets": [
            {
                "label": "Room",
                "description": "What room is the event going to be in?",
                "widgetType": "text-field",
                "parameters": {
                    "value": "event-room"
                }
            },
            {
                "label": "Start Time",
                "description": "When does the event start?",
                "widgetType": "datetime-field",
                "parameters": {
                    "date": "start-time"
                }
            },
            {
                "label": "End Time",
                "description": "When does the event end?",
                "widgetType": "datetime-field",
                "parameters": {
                    "date": "end-time"
                }
            }
        ]
    },
    {
      "label": "Resolution",
      "description": "Approve or Deny submission of this talk to the meeting",
      "widgets": [
        {
          "label": "Approve or Deny",
          "description": "Select the resolution \"Approve\" or \"Deny\"",
          "widgetType": "choice-picker",
          "parameters": {
            "choices": "event-approval-choices"
          }
        },
        {
          "label": "Submit",
          "description": "Submit this talk",
          "widgetType": "approval-submit",
          "parameters": {
            "item": "item",
            "approve": "event-approved",
            "deny": "event-denied",
            "startDate": "start-time",
            "endDate": "end-time",
            "room": "event-room"
          }
        }
      ]
    }
  ]
}
